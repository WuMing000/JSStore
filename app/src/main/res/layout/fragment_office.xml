<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="办公精选"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/office_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_office"/>

        <TextView
            android:id="@+id/tv_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文档笔记"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_below="@id/office_recycler_view"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/office_recycler_view"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/tv_document"
            android:text="更多>"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/document_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_document"/>

        <TextView
            android:id="@+id/tv_communication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通讯交流"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_below="@id/document_recycler_view"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/communication_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_communication"/>

        <TextView
            android:id="@+id/tv_thought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="思维导图"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_below="@id/communication_recycler_view"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/thought_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_thought"/>

        <TextView
            android:id="@+id/tv_instrument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="效率工具"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_below="@id/thought_recycler_view"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/instrument_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_instrument"/>

        <TextView
            android:id="@+id/tv_network_disk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常用网盘"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_below="@id/instrument_recycler_view"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/network_disk_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_network_disk"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>